<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nameFragment">

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.android.navegacion.NameFragment"
        android:label="fragment_name"
        tools:layout="@layout/fragment_name" >
        <action
            android:id="@+id/action_nameFragment_to_lastNameFragment"
            app:destination="@id/lastNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/lastNameFragment"
        android:name="com.android.navegacion.LastNameFragment"
        android:label="fragment_last_name"
        tools:layout="@layout/fragment_last_name" >
        <action
            android:id="@+id/action_lastNameFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="Juan Rodas" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.android.navegacion.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" />
</navigation>